{
  "name": "nest-vuttr-management",
  "version": "1.0.0",
  "author": "Matheus Torres <github.com/matheustrres>",
  "license": "GPL 3",
  "description": "Application to manage VUTTR (Very Useful Tools to Remember)",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "typeorm": "typeorm-ts-node-commonjs -d './src/infra/database/typeorm/datasource.ts'",
    "mig:run": "dotenv -e .env -- tsx ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/datasource.ts migration:run",
    "mig:rev": "dotenv -e .env -- tsx ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/datasource.ts migration:revert",
    "mig:crt": "sh -c 'typeorm-ts-node-commonjs migration:create ./src/infra/database/typeorm/migrations/$0'",
    "mig:gen": "dotenv -e .env -- node ./src/infra/database/typeorm/migrations/helpers/gen-named-migration.js",
    "prepare": "husky install",
    "start": "node dist/src/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "dotenv -e .env -- nest start --watch",
    "test:cov": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.3",
    "@nestjs/core": "^10.0.3",
    "@nestjs/platform-express": "^10.0.3",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "pg": "^8.11.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  }
}
