{
  "name": "nest-vuttr-management",
  "version": "1.0.0",
  "author": "Matheus Torres <github.com/matheustrres>",
  "license": "GPL 3",
  "description": "Application to manage VUTTR (Very Useful Tools to Remember)",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "prepare": "husky install",
    "start:dev": "dotenv -e .env.local -- tsnd -r tsconfig-paths/register --inspect --transpile-only --ignore-watch 'node_modules' --respawn 'src/index.ts'",
    "test:cov": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "pg": "^8.11.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}