{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@app/*": [
        "./app/*",
      ],
      "@data/*": [
        "./data/*",
      ],
      "@domain/*": [
        "./domain/*",
      ],
      "@infra/*": [
        "./infra/*",
      ],
      "@tests/*": [
        "../tests/*"
      ]
    },
    "rootDirs": [
      "./",
      "../tests/"
    ],
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "strictPropertyInitialization": false,
  }
}